    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python Debugger: Django",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/manage.py",
        "args": ["start_block_fetching"],
        "django": true,
        "justMyCode": false
      },
      {
        "name": "Python Debugger: Tests",
        "type": "debugpy",
        "request": "launch",
        "program": "pytest",
        "purpose": ["debug-test"],
        "args": ["-vv"],
        "django": true,
        "justMyCode": false
      }
    ]
  }